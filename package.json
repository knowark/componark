{
  "name": "componark",
  "version": "0.7.15",
  "description": "Knowark's Web Components Library",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack-dev-server --mode development --env.TARGET=development",
    "build": "webpack -p --mode production --env.TARGET=production --inline=false"
  },
  "types": "src/components/index",
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://git.nubark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "author": "Nubark <it@nubark.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@types/jest": "^24.0.15",
    "@types/jsdom": "^12.2.4",
    "babel-eslint": "^10.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "document-register-element": "^1.13.2",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-canvas-mock": "^2.1.0",
    "jsdom": "^15.1.1",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@material/button": "^3.0.0",
    "@material/card": "^3.0.0",
    "@material/dialog": "^3.0.0",
    "@material/drawer": "^3.0.0",
    "@material/fab": "^3.0.0",
    "@material/floating-label": "^3.0.0",
    "@material/form-field": "^3.0.0",
    "@material/list": "^3.0.0",
    "@material/select": "^3.0.0",
    "@material/snackbar": "^3.0.0",
    "@material/tab-bar": "^3.0.0",
    "@material/toolbar": "^2.3.0",
    "bootstrap": "^4.3.1",
    "chart.js": "^2.8.0",
    "jquery": "^3.4.1",
    "material-components-web": "^3.0.0",
    "popper.js": "^1.15.0"
  }
}
