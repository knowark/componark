{
  "name": "componark",
  "version": "0.1.0",
  "description": "Knowark's Web Components Library",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack-dev-server --mode development --env.TARGET=development",
    "build": "webpack -p --mode production --env.TARGET=production --inline=false"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://git.nubark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "author": "Nubark <it@nubark.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@types/jest": "^24.0.6",
    "@types/jsdom": "^12.2.2",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "jsdom": "^13.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {}
}
