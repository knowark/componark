{
  "name": "componark",
  "version": "0.2.0",
  "description": "Knowark's Web Components Library",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack-dev-server --mode development --env.TARGET=development",
    "build": "webpack -p --mode production --env.TARGET=production --inline=false"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://git.nubark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "author": "Nubark <it@nubark.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@fortawesome/fontawesome-free": "^5.7.2",
    "@types/jest": "^24.0.6",
    "@types/jsdom": "^12.2.2",
    "babel-eslint": "^10.0.1",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "document-register-element": "^1.13.1",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "jsdom": "^13.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@material/dialog": "^1.0.1",
    "@material/drawer": "^1.0.1",
    "bootstrap": "^4.3.1",
    "jquery": "^3.3.1",
    "material-components-web": "^0.44.1",
    "popper.js": "^1.14.7"
  }
}
