{
  "name": "componark",
  "version": "0.7.6",
  "description": "Knowark's Web Components Library",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack-dev-server --mode development --env.TARGET=development",
    "build": "webpack -p --mode production --env.TARGET=production --inline=false"
  },
  "types": "src/components/index",
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://git.nubark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "author": "Nubark <it@nubark.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@types/jest": "^24.0.13",
    "@types/jsdom": "^12.2.3",
    "babel-eslint": "^10.0.1",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.1",
    "document-register-element": "^1.13.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-canvas-mock": "^2.1.0",
    "jsdom": "^13.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@material/button": "^1.1.1",
    "@material/card": "^1.1.1",
    "@material/dialog": "^1.1.1",
    "@material/drawer": "^1.1.1",
    "@material/fab": "^1.1.1",
    "@material/floating-label": "^1.1.0",
    "@material/form-field": "^2.1.1",
    "@material/list": "^1.1.1",
    "@material/select": "^1.1.1",
    "@material/snackbar": "^1.1.1",
    "@material/tab-bar": "^1.1.1",
    "@material/toolbar": "^1.1.0",
    "bootstrap": "^4.3.1",
    "chart.js": "^2.8.0",
    "jquery": "^3.4.1",
    "material-components-web": "^0.44.1",
    "popper.js": "^1.15.0"
  }
}
